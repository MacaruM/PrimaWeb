@model Prenotazione;
@{
    ViewData["Title"] = "Prenota";
}
<h1>@ViewData["Title"]</h1>

<div class="text-center">
    <h1 class = "dispaly-4">Prenota qua</h1>
    <form class="m-2" method="post" asp-action="Prenota">
        <div class="form-group">
            <label asp-for="Nome">Qua il tuo nome:</label>
            <input asp-for="Nome" class="form-control">
        </div>
        <div class="form-group">
            <label asp-for="Email">Qua la tua e-mail:</label>
            <input asp-for="Email" class="form-control">
        </div>
        <button type="submit" class"btn btn-primary>Prenota cliccando</button>
    </form>
    @if(Model != null){
        <p>@Model.Nome, @Model.Email</p>
    }
</div>
